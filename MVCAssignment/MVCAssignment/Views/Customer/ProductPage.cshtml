            <div class="row row-cols-lg-4 g-2" style="width:100%;padding:0px;margin:0px;">
                @foreach (var item in Model)
                {
                    <div class="col" style="width:25%;">
                        <div class="card">
                            <a class="card-item-link" href="#">
