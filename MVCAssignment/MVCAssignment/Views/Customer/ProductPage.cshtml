                                <h3 class="card-title" id="title_1">@item.ProductName</h3>
                                <div class="card-item-footer">
                                    <p class="card-item-price"></p>
                                    @if (item.ProductDisPrice == item.ProductOriPrice)
                                    {
                                        <p class="card-item-price">RM @item.ProductOriPrice</p>
                                    }
                                    else
                                    {
                                        <p class="card-item-price">RM @item.ProductDisPrice <s>RM @item.ProductOriPrice</s></p>
